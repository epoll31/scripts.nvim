{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scripts JSON",
  "type": "object",
  "properties": {
    "scripts": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "properties": {
            "cmd": {
              "type": "string"
            },
            "show_output": {
              "type": "boolean"
            }
          },
          "required": [
            "cmd"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "scripts"
  ],
  "additionalProperties": false
}
